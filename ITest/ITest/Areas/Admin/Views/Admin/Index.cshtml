@model ITest.Areas.Admin.Models.AllTestsViewModel
@{
    ViewData["Title"] = "DashBoard";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-xs-6 col-sm-8 col-md-10 col-lg-10 col-xl-10">
            <div class="panel with-nav-tabs panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1default" data-toggle="tab"><b>Your Test List</b></a></li>
                        <li><a href="#tab2default" data-toggle="tab"><b>Test Results</b></a></li>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="CreateTest" class="btn btn-primary pull-right">New Test</a>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab1default">
                            <table class="table table-striped custab">
                                <thead>
                                    <tr>
                                        <th>Test Name</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                @{
                                    if (Model.AllTests.Any())
                                    {
                                        foreach (var test in Model.AllTests)
                                        {
                                            <tr>
                                                <td>@test.Name</td>
                                                <td>@test.Category</td>
                                                @{
                                                    if (test.IsPublished)
                                                    {
                                                        <td>Publlished</td>
                                                        <td class="text-center">
                                                            <a class="btn btn-primary disabled" href="#">Publish</a>
                                                            <a class="btn btn-primary disabled" href="#">Edit</a>
                                                            <a class="btn btn-primary">Disable</a>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>Draft</td>
                                                        <td class="text-center">
                                                            <a class="btn btn-primary" href="#"> Publish</a>
                                                            <a class="btn btn-primary" href="#">Edit</a>
                                                            <a href="#" class="btn btn-primary">Delete</a>
                                                        </td>
                                                    }
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                There are no created tests.
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        <div class="tab-pane fade" id="tab2default">Default 2</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>