@model ITest.Areas.Admin.Models.CreateAnswerViewModel

@{
    ViewData["Title"] = "NewAnswerPartial";
}

<div class="answer-container">
    <div class="checkbox">
        <button type="button" class="btn btn-default pull-right">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
        <label asp-for="IsCorrect" class="pull-right"><input class="answer-is-correct" type="checkbox">Correct Answer</label>
    </div>
    <div class="answer-count">Answer</div>
    <textarea asp-for="Content" class="form-control answer" rows="5"></textarea>
</div>



